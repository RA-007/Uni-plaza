# Frontend Environment Variables
# Copy this file to .env and update the values as needed

# Backend API Base URL
# This should point to your backend server API endpoint
# If your backend runs on a different port, update accordingly
REACT_APP_API_BASE_URL=http://localhost:3000/api

# Frontend Base URL
# This is the URL where your React app will be accessible
REACT_APP_BASE_URL=http://localhost:3001

# Upload/Static Files URL
# This should point to your backend's static file serving endpoint
# Used for displaying uploaded images and files
REACT_APP_UPLOAD_URL=http://localhost:3000/uploads

# Note: All React environment variables must start with REACT_APP_
